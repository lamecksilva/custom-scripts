# Conky, a system monitor, based on torsmo
alignment middle_right
#alignment top_right
background no
cpu_avg_samples 4
default_color 999999
default_outline_color black
default_shade_color black
double_buffer yes
draw_shades yes
draw_borders no
draw_outline yes
draw_graph_borders no
font Sans Regular:size=10
gap_x 8
gap_y 124
minimum_width 400
minimum_height 300
no_buffers yes
override_utf8_locale no
own_window yes
own_window_transparent no
own_window_type desktop
own_window_argb_visual yes
own_window_argb_value 120
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
text_buffer_size 1024
total_run_times 0
update_interval 1.0
use_xft yes
uppercase no
xftalpha 0

TEXT




# ==== System Info ==== #
S Y S T E M    $alignr ${color white}$distribution $kernel
$hr
${color grey}Time: ${color white}${time %H:%M:%S}$alignr${color grey}Date: ${color white}${time %d/%m/%Y}
${color grey}User: ${color white} $user_names $alignr${color grey}Uptime: ${color white} $uptime

# ==== Battery Info ==== #
$hr
${color grey}BATTERY $alignr ${battery_percent}%  ${color green} ${battery_bar 4, 160}

# ==== RAM Info ==== #
${color white}$hr
${color grey}R A M: $alignr ${color white} ${mem}/${memmax} 
Ram Usage: $alignr $memperc%  ${color green} ${membar 4, 160}

# ==== CPU Info ==== #
${color white}$hr
${color grey}C P U $alignr ${cpu cpu0}% (2.20GHz)

${color white}CPU0    ${cpu cpu0}% / ${freq_g cpu0}GHz   ${color white}CPU1 $alignr${cpu cpu1}% / ${freq_g cpu1}GHz
${color green}${cpubar 4, 150 cpu0}${color grey}  $alignr${color green}${cpubar 4, 150 cpu1}${color grey}
${color white}CPU2    ${cpu cpu2}% / ${freq_g cpu2}GHz   ${color white}CPU3 $alignr${cpu cpu3}% / ${freq_g cpu3}GHz
${color green}${cpubar 4, 150cpu2}${color grey}  $alignr${color green}${cpubar 4, 150 cpu3}${color grey} 

# ==== CPU PROCESS Info ==== #
#T O P   C P U
#$hr
#Process$alignr CPU% MEM%
#${top name 1} $alignr${top cpu 1}   ${top mem 1} 
#${top name 2} $alignr${top cpu 2}   ${top mem 2} 
#${top name 3} $alignr${top cpu 3}   ${top mem 3} 
# ==== RAM PROCESS Info ==== #
#T O P   R A M
#$hr
#Process $alignr CPU% MEM%
#${top_mem name 1} $alignr${top_mem cpu 1}   ${top_mem mem 1} 
#${top_mem name 2} $alignr${top_mem cpu 2}   ${top_mem mem 2} 
#${top_mem name 3} $alignr${top_mem cpu 3}   ${top_mem mem 3} 
# ==== Storage / HDD Info ==== #
$hr
S T O R A G E
Root: ${alignr} ${color white} ${fs_used /} / ${fs_size /} ${color green} ${fs_bar 4, 140 /}${color grey}
Read / Write: $alignr $diskio_read / $diskio_write

# ==== Network Info ==== #
$hr
N E T W O R K

IP (wlp6s0) $alignr ${addr wlp6s0}
IP (enp7s0) $alignr ${addr enp7s0}

Device ${alignr} Down / Up   
Wireless (wlp6s0) ${alignr}${totaldown wlp6s0} / ${totalup wlp6s0}
Wired (enp7s0) ${alignr}${totaldown enp7s0} / ${totalup enp7s0}
