conky.config = {
-- Conky, a system monitor, based on torsmo
	alignment = 'middle_right',
--alignment top_right
	background = false,
	cpu_avg_samples = 4,
	default_color = '#999999',
	default_outline_color = 'black',
	default_shade_color = 'black',
	double_buffer = true,
	draw_shades = true,
	draw_borders = false,
	draw_outline = true,
	draw_graph_borders = false,
	font = 'Sans Regular:size=10',
	gap_x = 8,
	gap_y = 124,
	width = '400',
	minimum_height = '300',
	no_buffers = true,
	override_utf8_locale = false,
	own_window = true,
	own_window_transparent = false,
	own_window_type = 'desktop',
	own_window_argb_visual = true,
	own_window_argb_value = 120,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	text_buffer_size = 1024,
	total_run_times = 0,
	update_interval = 1.0,
	use_xft = true,
	uppercase = false,
	xftalpha = 0,

};

conky.text = [[
# ==== System Info ==== #
S Y S T E M $alignr ${color white}$distribution $kernel
$hr
${color grey}User $alignr${color white} $user_names 
${color grey}Time $alignr${color white}${time %H:%M:%S}
${color grey}Date $alignr${color white}${time %d/%m/%Y}
${color grey}Uptime $alignr${color white} $uptime
#${color grey}CPU $alignr${color white} ${exec lscpu | grep "Model name" | sed -r 's/Model name:\s{1,}(.*) @ .*z\s*/\1/g'}
${color grey}Memory $alignr${color white}${memmax}
${color grey}BATTERY $alignr${color white}${battery_percent}%  ${color green} ${battery_bar 5, 160}
#${color white}$hr
${color grey}RAM $alignr${color white}${mem}/${memmax}
${color grey}Ram Usage $alignr$memperc% ${color green} ${membar 6, 160}
# ==== CPU Info ==== #
#${color white}$hr
${color grey}CPU $alignr${color white}${exec lscpu | grep "Model name:" | sed -r 's/Model name:\s{1,}//g'}
${color grey}CPU0 $alignr${color white}${cpu cpu0}% / ${freq_g cpu0}GHz
${color green}${cpubar 7 cpu0}
${color grey}CPU1 $alignr${color white}${cpu cpu1}% / ${freq_g cpu1}GHz
${color green}${cpubar 7 cpu1}${color grey}
${color gray}CPU2  $alignr${color white}${cpu cpu2}% / ${freq_g cpu2}GHz
${color green}${cpubar 7 cpu2}${color grey}
${color grey}CPU3 $alignr${color white}${cpu cpu3}% / ${freq_g cpu3}GHz
${color green}${cpubar 7 cpu3}
# ==== Storage / HDD Info ==== #
${color white}$hr
${color grey}STORAGE $alignr${color white} ${fs_used /} / ${fs_size /}
${color grey}HDD $alignr${color white} $fs_used_perc% ${color green} ${fs_bar 6, 160}${color grey}
Read / Write $alignr${color white} $diskio_read / $diskio_write
# ==== CPU PROCESS Info ==== #
#T O P   C P U
#Process$alignr CPU% MEM%
#${top name 1} $alignr${top cpu 1}   ${top mem 1} 
#${top name 2} $alignr${top cpu 2}   ${top mem 2} 
#${top name 3} $alignr${top cpu 3}   ${top mem 3} 
# ==== RAM PROCESS Info ==== #
#T O P   R A M
#$hr
#Process $alignr CPU% MEM%
#${top_mem name 1} $alignr${top_mem cpu 1}   ${top_mem mem 1} 
#${top_mem name 2} $alignr${top_mem cpu 2}   ${top_mem mem 2} 
#${top_mem name 3} $alignr${top_mem cpu 3}   ${top_mem mem 3} 
# ==== Network Info ==== #
${color white}$hr
NETWORK
IP (wlp6s0) $alignr ${addr wlp6s0}
IP (enp7s0) $alignr ${addr enp7s0}

Device ${alignr} Down / Up
Wireless (wlp6s0) ${alignr}${totaldown wlp6s0} / ${totalup wlp6s0}
Wired (enp7s0) ${alignr}${totaldown enp7s0} / ${totalup enp7s0}
]];
